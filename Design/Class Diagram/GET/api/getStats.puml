class EventRoutes {
  + GET /api/events/stats
}

class EventController {
  + getEventStats()
}

class EventModel {
  + countAllEvents()
  + countActiveEvents()
  + countCancelledEvents()
}

class BookingModel {
  + countAllBookings()
}

class Database {
  + query(sql, params)
}

